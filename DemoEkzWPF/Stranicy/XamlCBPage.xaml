<Page x:Class="DemoEkzWPF.Stranicy.XamlCBPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEkzWPF.Stranicy"
      mc:Ignorable="d" 
      d:DesignHeight="215" d:DesignWidth="667"
      Title="XamlCBPage">
    <Page.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"></Setter>
                <Setter Property="FontFamily" Value="Consolas"></Setter>
                <Setter Property="TextWrapping" Value="Wrap"></Setter>

            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Margin="20,10" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Century Gothic" Margin="8,0,0,10">Вставляем элемент ComboBox и задаем ему следующие атрибуты:</TextBlock>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">ComboBox <Run Foreground="#FFBB2727" FontWeight="Bold">ItemsSource="{Binding stranas}" DisplayMemberPath="Strana" SelectedValuePath="Strana"</Run> Name="CbStrany" Width="200" Margin="5"</TextBlock>
        </StackPanel>
    </Grid>
</Page>
